<?xml version="1.0" encoding="utf-8"?>
<mosinstall type="component" version="1.0.0">
	<name>Contact Items</name>
	<author>Joomla! Project</author>
	<copyright>(C) 2005 Open Source Matters. All rights reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>1.0.0</version>
	<description>Parameters for individual Contact Items</description>
	<params>
		<param name="menu_image" type="imagelist" directory="/images/stories" hide_default="1" default="" label="菜单图片" description="一个放在您菜单项目左边或右边的小图示，图片必须位于images/stories/" />
		<param name="pageclass_sfx" type="text" size="20" default="" label="页面CSS字尾" description="一个应用于页面CSS的字尾，可以让这页面有独立风格" />
		<param name="print" type="list" default="" label="打印图示" description="显示/隐藏项目的打印图示 - 只作用于这一页">
			<option value="">使用全域</option>
			<option value="0">隐藏</option>
			<option value="1">显示</option>
		</param>
		<param name="back_button" type="list" default="" label="返回按钮" description="显示/隐藏返回按钮，这个可以让您返回上一个观看的页面">
			<option value="">使用全域</option>
			<option value="0">隐藏</option>
			<option value="1">显示</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="name" type="radio" default="1" label="姓名" description="显示/隐藏姓名信息">
			<option value="0">隐藏</option>
			<option value="1">显示</option>
		</param>
		<param name="position" type="radio" default="1" label="职称" description="显示/隐藏职称信息">
			<option value="0">隐藏</option>
			<option value="1">显示</option>
		</param>
		<param name="email" type="radio" default="0" label="Email" description="显示/隐藏Email信息，如果您设定为显示，将会启动Javascript遮盖自动化程式保护这信息">
			<option value="0">隐藏</option>
			<option value="1">显示</option>
		</param>
		<param name="street_address" type="radio" default="1" label="住址" description="显示/隐藏住址信息">
			<option value="0">隐藏</option>
			<option value="1">显示</option>
		</param>
		<param name="suburb" type="radio" default="1" label="市镇" description="显示/隐藏市镇信息">
			<option value="0">隐藏</option>
			<option value="1">显示</option>
		</param>
		<param name="state" type="radio" default="1" label="州省" description="显示/隐藏州省信息">
			<option value="0">隐藏</option>
			<option value="1">显示</option>
		</param>
		<param name="country" type="radio" default="1" label="国家" description="显示/隐藏国家信息">
			<option value="0">隐藏</option>
			<option value="1">显示</option>
		</param>
		<param name="postcode" type="radio" default="1" label="邮递区号" description="显示/隐藏邮递区号">
			<option value="0">隐藏</option>
			<option value="1">显示</option>
		</param>
		<param name="telephone" type="radio" default="1" label="电话" description="显示/隐藏电话信息">
			<option value="0">隐藏</option>
			<option value="1">显示</option>
		</param>
		<param name="fax" type="radio" default="1" label="传真" description="显示/隐藏传真信息">
			<option value="0">隐藏</option>
			<option value="1">显示</option>
		</param>
		<param name="misc" type="radio" default="1" label="其它信息" description="显示/隐藏其它信息">
			<option value="0">隐藏</option>
			<option value="1">显示</option>
		</param>
		<param name="image" type="radio" default="1" label="图片" description="显示/隐藏图片">
			<option value="0">隐藏</option>
			<option value="1">显示</option>
		</param>
		<param name="vcard" type="radio" default="0" label="VCard" description="显示/隐藏 VCard">
			<option value="0">隐藏</option>
			<option value="1">显示</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="email_description" type="radio" default="1" label="Email说明" description="显示/隐藏下方的说明文字">
			<option value="0">隐藏</option>
			<option value="1">显示</option>
		</param>
		<param name="email_description_text" type="text" size="30" default="" label="说明文字" description="这段对Email表单的说明文字，如果没有加上会使用语言档中的_EMAIL_DESCRIPTION" />
		<param name="email_form" type="radio" default="1" label="Email表单" description="显示/隐藏Email表单">
			<option value="0">隐藏</option>
			<option value="1">显示</option>
		</param>
		<param name="email_copy" type="radio" default="0" label="Email复制" description="显示/隐藏让寄送者可以寄一份复制信给自己的勾选盒">
			<option value="0">隐藏</option>
			<option value="1">显示</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="drop_down" type="radio" default="0" label="下拉式菜单" description="显示/隐藏下拉式菜单在观看连络人时">
			<option value="0">隐藏</option>
			<option value="1">显示</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="contact_icons" type="list" default="0" label="图示/文字" description="使用图示、文字或不使用在联络人信息显示时">
			<option value="0">图示</option>
			<option value="1">文字</option>
			<option value="2">无</option>
		</param>
		<param name="icon_address" type="imagelist" directory="/images/M_images" hide_none="1" default="" label="住址图示" description="住址信息用的图示" />
		<param name="icon_email" type="imagelist" directory="/images/M_images" hide_none="1" default="" label="Email 图示" description="Email信息用的图示" />
		<param name="icon_telephone" type="imagelist" directory="/images/M_images" hide_none="1" default="" label="电话图示" description="电话信息用的图示" />
		<param name="icon_fax" type="imagelist" directory="/images/M_images" hide_none="1" default="" label="传真图示" description="传真信息用的图示" />
		<param name="icon_misc" type="imagelist" directory="/images/M_images" hide_none="1" default="" label="其它信息图示" description="其它信息用的图示" />
	</params>
</mosinstall>
