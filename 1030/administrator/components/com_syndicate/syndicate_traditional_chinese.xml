<?xml version="1.0" encoding="utf-8"?>
<mosinstall type="component" version="1.0.0">
	<name>Syndicate</name>
	<author>Joomla! Project</author>
	<copyright>(C) 2005 Open Source Matters. All rights reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>1.0.0</version>
	<description>This component controls the Syndication settings</description>
	<params>
		<param name="check" type="radio" default="1" label="安全性檢查" description="如果啟用的話，聯合供稿功能只有在RSS Feed模組發佈時才會有作用">
			<option value="0">否</option>
			<option value="1">是</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="cache" type="radio" default="1" label="快取" description="將feed檔案快取起來">
			<option value="0">否</option>
			<option value="1">是</option>
		</param>
		<param name="cache_time" type="text" size="8" default="3600" label="快取時間" description="快取檔案將會在這個設定的秒數重新更新" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="count" type="text" size="4" default="5" label="項目數" description="提供的項目數目" />
		<param name="title" type="text" size="40" default="Powered by Joomla! 1.0" label="Title" description="Syndication Title" />
		<param name="description" type="textarea" rows="5" cols="30" default="Joomla! site syndication" label="說明文字" description="聯合供稿說明文字" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="image_file" type="imagelist" directory="/images/M_images" default="" label="圖片" description="包含在feed裡的圖片檔案" />
		<param name="image_alt" type="text" size="30" default="Powered by Joomla! 1.0" label="圖片說明" description="圖片的說明文字" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="limit_text" type="radio" default="1" label="文章限制" description="使用下面的數值來限制顯示文字">
			<option value="0">否</option>
			<option value="1">是</option>
		</param>
		<param name="text_length" type="text" size="4" default="20" label="文章字數" description="文章的字數 - 0將會不顯示任何文字" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="rss091" type="radio" default="1" label="RSS 0.91" description="啟動/關閉RSS 0.91 feed 聯合供稿">
			<option value="0">關閉</option>
			<option value="1">啟動</option>
		</param>
		<param name="rss10" type="radio" default="1" label="RSS 1.0" description="啟動/關閉RSS 1.0 feed 聯合供稿">
		<option value="0">關閉</option>
			<option value="1">啟動</option>
		</param>
		<param name="rss20" type="radio" default="1" label="RSS 2.0" description="啟動/關閉RSS 2.0 feed 聯合供稿">
			<option value="0">關閉</option>
			<option value="1">啟動</option>
		</param>
		<param name="atom03" type="radio" default="1" label="ATOM 0.3" description="啟動/關閉 ATOM 0.3 feed 聯合供稿">
		<option value="0">關閉</option>
			<option value="1">啟動</option>
		</param>
		<param name="opml" type="radio" default="1" label="OPML" description="啟動/關閉 OPML feed 聯合供稿">
		<option value="0">關閉</option>
			<option value="1">啟動</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="orderby" type="list" default="front" label="排序" description="顯示的項目的排序方式">
			<option value="front">預設</option>
			<option value="front">首頁的順序</option>
			<option value="date">較舊的排前</option>
			<option value="rdate">較新的排前</option>
			<option value="alpha">標題字元排序</option>
			<option value="ralpha">標題字元反向排序</option>
			<option value="author">作者字元排序</option>
			<option value="rauthor">作者字元排序</option>
			<option value="hits">最多點閱排前</option>
			<option value="rhits">最少點閱排前</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="live_bookmark" type="list" default="0" label="即時書籤" description=" 啟動對Firefox 即時書籤功能支援">
			<option value="0">關閉</option>
			<option value="RSS0.91">RSS 0.91</option>
			<option value="RSS1.0">RSS 1.0</option>
			<option value="RSS2.0">RSS 2.0</option>
			<option value="ATOM0.3">ATOM 0.3</option>
		</param>
	</params>
</mosinstall>
