	<install>
		<queries>
			<query>
				CREATE TABLE IF NOT EXISTS `#__gj_active` (
					`id` int(10) unsigned NOT NULL auto_increment,
					`code` varchar(32) NOT NULL default '',
					`too` varchar(255) NOT NULL default '',
					`groups` int(15) NOT NULL default '0',
					PRIMARY KEY	(`id`)
				) TYPE=MyISAM AUTO_INCREMENT=3 ;
			</query>

			<query>
				CREATE TABLE IF NOT EXISTS `#__gj_bul` (
					`id` int(20) unsigned NOT NULL auto_increment,
					`group_id` int(10) NOT NULL default '0',
					`author_name` varchar(255) NOT NULL default '',
					`author_id` int(10) NOT NULL default '0',
					`post` text NOT NULL,
					`subject` varchar(255) NOT NULL default '',
					`date_bul` datetime NOT NULL default '0000-00-00',
					PRIMARY KEY	(`id`)
				) TYPE=MyISAM AUTO_INCREMENT=4 ;
			</query>

			<query>
				CREATE TABLE IF NOT EXISTS `#__gj_groups` (
					`id` int(5) unsigned NOT NULL auto_increment,
					`name` varchar(255) NOT NULL default '',
					`descr` text NOT NULL,
					`date_s` datetime NOT NULL default '0000-00-00',
					`type` enum('1','2','3') NOT NULL default '1',
					`creator` varchar(255) NOT NULL default '0',
					`user_id` int(10) NOT NULL default '0',
					`active` enum('0','1') NOT NULL default '0',
					`category` int(15) NOT NULL default '0',
					`logo` varchar(255) NOT NULL default '0',
					`params` text NOT NULL default '',
					PRIMARY KEY	(`id`)
				) TYPE=MyISAM AUTO_INCREMENT=4 ;
			</query>

			<query>
				CREATE TABLE IF NOT EXISTS `#__gj_users` (
					`id` int(15) unsigned NOT NULL auto_increment,
					`id_user` int(10) NOT NULL default '0',
					`username` varchar(255) NOT NULL default '',
					`id_group` int(5) NOT NULL default '0',
					`date` datetime NOT NULL default '0000-00-00',
					`status` enum('active','inactive','invited','need approval','undefined') NOT NULL default 'undefined',
					PRIMARY KEY	(`id`)
				) TYPE=MyISAM AUTO_INCREMENT=11 ;
			</query>

			<query>
				CREATE TABLE IF NOT EXISTS `#__gj_grcategory` (
					`id` int(15) unsigned NOT NULL auto_increment,
					`catname` varchar(255) NOT NULL default '',
					`published` int(11) NOT NULL default '0',
					`type` int(11) NOT NULL default '1',
					`admin` int(11) default NULL,
					`create_open` int(11) NOT NULL default '1',
					`create_closed` int(11) NOT NULL default '1',
					`create_invite` int(11) NOT NULL default '1',
					`cat_image` varchar(255) default NULL,
					`access` tinyint(3) NOT NULL DEFAULT '0',
					`ordering` tinyint(4) default NULL,
					`descr` text NOT NULL default '',
					PRIMARY KEY	(`id`)
				) TYPE=MyISAM AUTO_INCREMENT=1 ;
			</query>

			<query>
				CREATE TABLE IF NOT EXISTS `#__gj_jb` (
					`id` int(11) unsigned NOT NULL auto_increment,
					`group_id` int(11),
					`category_id` int(11),
					PRIMARY KEY	(`id`) 
				) TYPE=MyISAM;
			</query>
			
				<query>
				CREATE TABLE IF NOT EXISTS `#__gj_eventlist` (
					`id` int(11) unsigned NOT NULL auto_increment,
					`group_id` int(11),
					`category_id` int(11),
					PRIMARY KEY	(`id`) 
				) TYPE=MyISAM;
			</query>

			<query>
				CREATE TABLE IF NOT EXISTS `#__gj_options` (
					`id` int(10) unsigned NOT NULL auto_increment,
					`onpage` int(5) NOT NULL default '0',
					`onpage_members` int(5) NOT NULL default '0',
					`bul_creator` enum('0','1') NOT NULL default '0',
					`blogm` int(5) NOT NULL default '0',
					`nophoto` varchar(255) NOT NULL default '',
					`nophoto_logo` varchar(255) NOT NULL default '',
					`approval` enum('0','1') NOT NULL default '0',
					`pms` enum('email','uddeim','mypms','pmsenh','jim','missus','clexus') NOT NULL default 'email',
					`notify` enum('0','1') NOT NULL default '0',
					`notifyjoin` enum('0','1') NOT NULL default '0',
					`nonreg` enum('0','1') NOT NULL default '0',
					`version` enum('0','1') NOT NULL default '0',
					`admin_email` varchar(55) NOT NULL default 'Webmaster@MyDomain.com',
					`send_admin_emails` enum('0','1') NOT NULL default '1',
					`real_names` enum('0','1') NOT NULL default '0',
					`create_groups` int(11) NOT NULL default '1',
					`logosize` int(5) NOT NULL default '128',
					`date_form` varchar(50) NOT NULL default '%Y-%m-%d %H:%i:%s',
					`jb` enum('0','1') NOT NULL default '0',
					`jb_cat` int(3) NOT NULL default '0',
					`eventlist` enum('0','1') NOT NULL default '0',
					`bulletin` enum('0','1') NOT NULL default '1',
					`jomcomment` enum('0','1') NOT NULL default '0',
					`wysiwyg` enum('0','1') NOT NULL default '0',
					`wysiwyg_width` int(5) NOT NULL default '400',
					`wysiwyg_height` int(5) NOT NULL default '200',
					`wysiwyg_rows` int(5) NOT NULL default '80',
					`wysiwyg_cols` int(5) NOT NULL default '15',
					`ajax_active` enum('0','1') NOT NULL default '0',
					`ajax_access` tinyint(3) NOT NULL DEFAULT '0',
					`ajax_message` varchar(25) NOT NULL default 'load data',
					`template` varchar(25) NOT NULL default 'default',
					`hideprivate` enum('0','1') NOT NULL default '0',
					`jb_count` int(5) NOT NULL default '5',
					`el_count` int(5) NOT NULL default '5',
					`force_invite` enum('0','1') NOT NULL default '0',
					PRIMARY KEY	(`id`) 
				) TYPE=MyISAM;
			</query>
		</queries>
	</install>

	<uninstall>
		<query>
		</query> 
	</uninstall>

