
<install type="component" version="1.5.0" method="upgrade">
	<name>PollXT</name>
	<creationdate>02-06-2009</creationdate>
	<author>Oli Merten</author>
	<copyright>(c) 2004 - 2009 JoomlaXT</copyright>
	<authoremail>webmaster@joomlaxt.com</authoremail>
	<authorurl>http://www.joomlaxt.com</authorurl>
	<version>2.00.05</version>
	<description><![CDATA[<br />Installation created with <a href='http://www.joomlaxt.com'>InstallXT!</a>]]></description>
	<installfile>admin/install.pollxt.php</installfile>
	<uninstallfile>admin/uninstall.pollxt.php</uninstallfile>
	<params>
		<param name="xt_task" type="radio" default="1" label="Task" description="Go either for Voting (with PollID) or Show a list of Polls">
			<option value="0">Direct Voting</option>
			<option value="1">Show List</option>
		</param>
		<param name="xt_pollid" type="text" default="" label="Poll ID" description="A Poll ID, if blank settings from global configuration apply" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="back_button" type="list" default="" label="Back Button" description="Show/Hide a Back Button, that returns you to the previously viewed page">
			<option value="">Use Global</option>
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="@spacer" type="spacer" default="Settings below for P" label="" description="" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="headings" type="radio" default="1" label="Table Headings" description="Show/Hide the Table Headings">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="item_description" type="radio" default="1" label="Poll Descriptions" description="Show/Hide the Introtext of the Polls">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="description" type="radio" default="1" label="Description" description="Show/Hide the Description below">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="description_text" type="textarea" default="" label="Description Text" rows="5" cols="30" description="Description for page" />
		<param name="image" type="imagelist" default="" label="Image" directory="/images/stories" hide_default="1" description="Image for page, must be located in the /images/stories folder. No image will mean an image is not loaded" />
		<param name="image_align" type="radio" default="right" label="Image Align" description="Alignment of the image">
			<option value="left">Left</option>
			<option value="right">Right</option>
		</param>
		<param name="voted" type="radio" default="1" label="Voting possible" description="Displays an image, to indicate if voting is possible or not for that particular poll">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="itemimage" type="imagelist" default="" label="Voting not possible Image" directory="/images/stories" hide_default="1" description="Image for items, displayed, when voting is not possible for that poll, default image if left blank" />
		<param name="itemimagenot" type="imagelist" default="" label="Voting possible image" directory="/images/stories" hide_default="1" description="Image for items, displayed, when voting is possible for that poll, default image if left blank" />
		<param name="votes" type="radio" default="1" label="No. of Votes" description="Displays the number of voters">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="pollNav" type="radio" default="1" label="Poll Navigation" description="Navigation Buttons for Polls">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="pollExp" type="radio" default="1" label="Poll Expiration date" description="Show Poll Expiration Date">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="category" type="mos_category" default="0" label="Category" description="Show polls of Category" />
	</params>
