<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0">
	<name>Easytagcloud</name>
	<author>Piemon</author>
	<creationDate>June 2011</creationDate>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>piemon.huang@gmail.com</authorEmail>
	<authorUrl>www.joomlatonight.com</authorUrl>
	<version>2.0 for J1.5</version>
	<description>MOD_EASYTAGCLOUD_DESCRIPTION</description>
	<files>
		<filename module="mod_easytagcloud">mod_easytagcloud.php</filename>
		<filename module="mod_easytagcloud">helper.php</filename>
		<filename module="mod_easytagcloud">index.html</filename>
		<filename module="mod_easytagcloud">tmpl/index.html</filename>
		<filename module="mod_easytagcloud">tmpl/default.php</filename>
		<filename module="mod_easytagcloud">mod_easytagcloud.xml</filename>
        <filename module="mod_easytagcloud">tagsdata.php</filename>
		<filename module="mod_easytagcloud">updatetime.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_easytagcloud.ini</language>
		<language tag="zh-CN">zh-CN.mod_easytagcloud.ini</language>
		<language tag="hu-HU">hu-HU.mod_easytagcloud.ini</language>
		<language tag="fr-Fr">fr-FR.mod_easytagcloud.ini</language>			
		<language tag="ru-RU">ru-RU.mod_easytagcloud.ini</language>		
		<language tag="de-DE">de-DE.mod_easytagcloud.ini</language>						
	</languages>
	<params>
        <param 
		       name="interval" 
			   type="text" 
			   default="6" 
			   label="MOD_EASYTAGCLOUD_INTERVAL" 
	           description="MOD_EASYTAGCLOUD_INTERVAL_DESCRIPTION"/>
			   
		<param 
		       name="catid" 
			   type="text" 
			   default="" 
			   label="MOD_EASYTAGCLOUD_CATEGORY" 
			   description="MOD_EASYTAGCLOUD_CATEGORY_DESCRIPTION" >
        </param>
		
		<param 
		       name="expcatid" 
			   type="text" 
			   default="" 
			   label="MOD_EASYTAGCLOUD_EXCLUDECATEGORY" 
			   description="MOD_EASYTAGCLOUD_EXCLUDECATEGORY_DESCRIPTION" >
        </param>
		
		<param 
		       name="maxtags" 
			   type="text" 
			   default="30"  
			   label="MOD_EASYTAGCLOUD_MAXTAGS" 
			   description="MOD_EASYTAGCLOUD_MAXTAGS_DESCRIPTION" />
			   			   
			   		   
		<param 
		       name="maxfontsize" 
			   type="text" 
			   default="3"  
			   label="MOD_EASYTAGCLOUD_MAXFONTSIZE" 
			   description="MOD_EASYTAGCLOUD_MAXFONTSIZE_DESCRIPTION" />
			   
		<param 
		       name="minfontsize" 
			   type="text" 
			   default="0.7"  
			   label="MOD_EASYTAGCLOUD_MINFONTSIZE" 
			   description="MOD_EASYTAGCLOUD_MINFONTSIZE_DESCRIPTION" />	     
	    
		<param 
		       name="tagscolor" 
			   type="text" 
			   default=""  
			   label="MOD_EASYTAGCLOUD_TAGSCOLOR" 
			   description="MOD_EASYTAGCLOUD_TAGSCOLOR_DESCRIPTION" />      
		<param 
		       name="coefficient" 
			   type="text" 
			   default="15"  
			   label="MOD_EASYTAGCLOUD_COEFFICIENT" 
			   description="MOD_EASYTAGCLOUD_COEFFICIENT_DESCRIPTION" />
			   	   
		<param
			   name="show_underline"
			   type="radio"
			   default="0"
			   label="MOD_EASYTAGCLOUD_SHOWUNDERLINE"
					description="MOD_EASYTAGCLOUD_SHOWUNDERLINE_DESCRIPTION">
					<option
						value="1">MOD_EASYTAGCLOUD_SHOW</option>
					<option
						value="0">MOD_EASYTAGCLOUD_HIDE</option>
				</param>
		
		<param
			   name="hover_show_underline"
			   type="radio"
			   default="0"
			   label="MOD_EASYTAGCLOUD_HOVERSHOWUNDERLINE"
					description="MOD_EASYTAGCLOUD_HOVERSHOWUNDERLINE_DESCRIPTION">
					<option
						value="1">MOD_EASYTAGCLOUD_SHOW</option>
					<option
						value="0">MOD_EASYTAGCLOUD_HIDE</option>
				</param>
			   	
		<param 
		       name="blacklist"
			   type="textarea"
			   default="" 
			   cols="50" 
			   rows="8" 
			   label="MOD_EASYTAGCLOUD_BLACKLIST"
			   description="MOD_EASYTAGCLOUD_BLACKLIST_DESCRIPTION" />
	
		<param 
		       name="moduleclass_sfx"
			   type="text" default="" 
			   label="MOD_EASYTAGCLOUD_MODULECLASSSFX" 
			   description="MOD_EASYTAGCLOUD_MODULECLASSSFX_DESCRIPTION" />
	</params>
</install>
