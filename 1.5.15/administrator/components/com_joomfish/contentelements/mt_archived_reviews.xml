<?xml version="1.0" ?>
<joomfish type="contentelement">
  <name>Mosets Tree Archived Reviews</name>
  <author>Ivo Apostolov</author>
  <version>2.2</version>
  <description>Definition for the mosets tree archived reviews</description>
  <reference type="mt_archived_reviews">
  	<table name="mt_archived_reviews">
  		<field type="referenceid" name="rev_id" translate="0">ID</field>
  		<field type="titletext" name="rev_title"  length="50" maxlength="250" translate="1">Revison Title</field>
  		<field type="text" name="guest_name"  length="50" maxlength="250" translate="1" posthandler="filterTitle">Guest Name</field>
  		<field type="textarea" name="rev_text" translate="1">Revision text</field>
  		<field type="textarea" name="ownersreply_text" rows="10" columns="80" translate="1">Owner's reply</field>
  		<field type="textarea" name="ownersreply_admin_note" length="50" maxlength="250" translate="1">Owner's reply admin text</field>
  	</table>
  </reference>
</joomfish>
