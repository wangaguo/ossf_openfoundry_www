<?xml version="1.0" encoding="UTF-8"?>
<mosinstall version="4.5.1" type="mambot" group="search">
	<name>multi lingual content searchbot</name>
	<license>Think Network, Open Source License</license>
	<author>Think Network GmbH, Munich - Alex Kempkens</author>
	<authorEmail>JoomFish@ThinkMatrix.net</authorEmail>
	<authorUrl>http://www.joomfish.net</authorUrl>
	<creationDate>2006-05-03</creationDate>
	<copyright>2003 - 2006, Think Network GmbH, Munich</copyright>
	<version>1.7</version>
	<description>允許文字搜尋器也可以針對多國語系的內容項目進行搜尋</description>
	<files>
		<filename mambot="jfcontent.searchbot">jfcontent.searchbot.php</filename>
	</files>
	<params>
		<param name="search_limit" type="text" size="5" default="50" label="搜尋限制" description="搜尋項目報告的數量"/>		
		<param name="nonmenu" type="radio" default="1" label="未加入選單中的靜態內容" description="搜尋未加入選單項目連結的靜態內容?">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="active_language_only" type="radio" default="0" label="只搜尋運作中的語系" description="只針對運作中的語系進行搜尋?">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
	</params>
</mosinstall>
