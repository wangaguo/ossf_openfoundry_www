<?xml version="1.0" encoding="utf-8"?>
<mosinstall type="module" version="1.0.0">
	<name>Statistics</name>
	<author>Joomla! Project</author>
	<creationDate>July 2004</creationDate>
	<copyright>(C) 2005 Open Source Matters. All rights reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>1.0.0</version>
	<description>统计模块显示有关您的服务器中的安装、网站的会员、数据库中的文章数目、以及您提供网站连结的数目。</description>
	<files>
		<filename module="mod_stats">mod_stats.php</filename>
	</files>
	<params>
		<param name="serverinfo" type="radio" default="0" label="服务器信息" description="显示服务器信息">
			<option value="1">是</option>
			<option value="0">否</option>
		</param>
		<param name="siteinfo" type="radio" default="0" label="网站信息" description="显示网站信息">
			<option value="1">是</option>
			<option value="0">否</option>
		</param>
		<param name="counter" type="radio" default="0" label="点击计数器" description="显示点击计数器">
			<option value="1">是</option>
			<option value="0">否</option>
		</param>
		<param name="increase" type="text" default="0" label="计数器开始于" description="输入计数器开始计数的数字" />
		<param name="moduleclass_sfx" type="text" default="" label="模块CSS字尾" description="一个应用于模块CSS的字尾(table.moduletable)，可以让这页面有独立风格" />
	</params>
</mosinstall>
